@model Asp.netCoreMVCIntro.Models.Tutorial
@{
    ViewBag.Title = "Edit Tutorial";
}
<form asp-controller="Tutorial" asp-action="EditTutorial" method="post" class="mt-3">
    <input hidden asp-for="Id" />
  <div class="form-group row mt-3">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" placeholder="Name">
  </div>
  <div class="form-group row mt-3">
    <label asp-for="Description">Description</label>
    <input asp-for="Description" class="form-control">
  </div> 
   <div class="form-group mt-3">
   <button type="submit" class="btn btn-primary">Submit</button>
   <a asp-controller="Tutorial" asp-action="Index" class="btn btn-primary">Cancel</a>
   </div> 
 
</form>